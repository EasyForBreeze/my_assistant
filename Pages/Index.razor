@page "/"
@using new_assistant.Core.Interfaces
@using Microsoft.AspNetCore.Authorization
@inject IUserRoleService UserRoleService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>KeyCloak Assistant</PageTitle>

@{
    var isAuthenticated = HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated == true;
    
    if (!isAuthenticated)
    {
        // Если пользователь не авторизован, перенаправляем на авторизацию через Keycloak
        Navigation.NavigateTo("/api/auth/login", forceLoad: true);
        return;
    }
    
    // Отладочная информация
    var userId = UserRoleService.GetUserId();
    var userName = UserRoleService.GetUserName();
    var roles = UserRoleService.GetRoles();
    var isUser = UserRoleService.IsUser();
    var isAdmin = UserRoleService.IsAdmin();
}

<!-- Отладочная информация -->
<div class="card p-4 mb-4 bg-yellow-900/20 border border-yellow-500/30">
    <h3 class="text-lg font-semibold text-yellow-400 mb-2">Отладочная информация</h3>
    <div class="text-sm text-gray-300 space-y-1">
        <p><strong>ID пользователя:</strong> @userId</p>
        <p><strong>Имя пользователя:</strong> @userName</p>
        <p><strong>Роли:</strong> @string.Join(", ", roles)</p>
        <p><strong>IsUser:</strong> @isUser</p>
        <p><strong>IsAdmin:</strong> @isAdmin</p>
    </div>
</div>

@if (UserRoleService.IsUser())
{
    <!-- Для обычных пользователей показываем страницу клиентов -->
    <div class="mb-8 animate-stagger">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-4xl font-bold gradient-text mb-2">
                    Мои клиенты
                </h1>
                <p class="text-gray-400 text-lg">Управление вашими Keycloak клиентами и доступом к ним.</p>
            </div>
            <div class="flex space-x-4">
                <button class="btn-primary flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Создать клиента
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Section для пользователей -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Мои клиенты -->
        <div class="card stat-card-blue p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center text-blue-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">3</p>
                <p class="text-sm text-blue-300">Мои клиенты</p>
            </div>
        </div>

        <!-- Доступные клиенты -->
        <div class="card stat-card-green p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center text-green-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">5</p>
                <p class="text-sm text-green-300">Доступные мне</p>
            </div>
        </div>

        <!-- Активные -->
        <div class="card stat-card-orange p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-orange-500/20 rounded-full flex items-center justify-center text-orange-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">4</p>
                <p class="text-sm text-orange-300">Активные</p>
            </div>
        </div>

        <!-- Заблокированные -->
        <div class="card stat-card-red p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-red-500/20 rounded-full flex items-center justify-center text-red-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">1</p>
                <p class="text-sm text-red-300">Заблокированные</p>
            </div>
        </div>
    </div>

    <!-- Help Section для пользователей -->
    <div class="card p-6">
        <h3 class="text-xl font-semibold text-white mb-4">Полезная информация</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h4 class="text-lg font-medium text-gray-200 mb-2">Что такое Realm?</h4>
                <p class="text-gray-400 text-sm mb-3">
                    Realm - это пространство в Keycloak, где хранятся пользователи, клиенты и роли. 
                    Это как отдельная база данных для вашей организации.
                </p>
                <h4 class="text-lg font-medium text-gray-200 mb-2">Типы клиентов</h4>
                <ul class="text-gray-400 text-sm space-y-1">
                    <li>• <strong>Public</strong> - для мобильных приложений</li>
                    <li>• <strong>Confidential</strong> - для веб-приложений</li>
                    <li>• <strong>Bearer-only</strong> - для API сервисов</li>
                </ul>
            </div>
            <div>
                <h4 class="text-lg font-medium text-gray-200 mb-2">Роли и доступ</h4>
                <p class="text-gray-400 text-sm mb-3">
                    Вы можете создавать клиентов и редактировать только те, к которым у вас есть доступ. 
                    Администраторы могут предоставить вам доступ к дополнительным клиентам.
                </p>
                <h4 class="text-lg font-medium text-gray-200 mb-2">Confluence Wiki</h4>
                <p class="text-gray-400 text-sm">
                    При создании или изменении клиента автоматически создается или обновляется страница в Confluence Wiki 
                    с документацией по вашему клиенту.
                </p>
            </div>
        </div>
    </div>
}
else if (UserRoleService.IsAdmin())
{
    <!-- Для администраторов показываем системную информацию -->
    <div class="mb-8 animate-stagger">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-4xl font-bold gradient-text mb-2">
                    Информация о системе
                </h1>
                <p class="text-gray-400 text-lg">Мониторинг состояния KeyCloak Assistant и связанных сервисов.</p>
            </div>
        </div>
    </div>

    <!-- Stats Section для администраторов -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Клиенты -->
        <div class="card stat-card-blue p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-blue-500/20 rounded-full flex items-center justify-center text-blue-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">12</p>
                <p class="text-sm text-blue-300">Активных клиентов</p>
            </div>
        </div>

        <!-- Фоновые задачи -->
        <div class="card stat-card-orange p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-orange-500/20 rounded-full flex items-center justify-center text-orange-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">3</p>
                <p class="text-sm text-orange-300">Задач в очереди</p>
            </div>
        </div>

        <!-- Состояние KeyCloak -->
        <div class="card stat-card-green p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-green-500/20 rounded-full flex items-center justify-center text-green-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">Online</p>
                <p class="text-sm text-green-300">KeyCloak сервер</p>
            </div>
        </div>

        <!-- База данных -->
        <div class="card stat-card-purple p-6 flex items-center space-x-4 animate-stagger">
            <div class="w-12 h-12 bg-purple-500/20 rounded-full flex items-center justify-center text-purple-400 text-xl">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
                </svg>
            </div>
            <div>
                <p class="text-2xl font-bold text-white">98%</p>
                <p class="text-sm text-purple-300">Использование БД</p>
            </div>
        </div>
    </div>

    <!-- System Status Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Состояние сервисов -->
        <div class="card p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-white">Состояние сервисов</h3>
                <span class="text-xs text-gray-400">Обновлено 2 мин назад</span>
            </div>
            <div class="space-y-4">
                <div class="flex items-center justify-between p-3 rounded-lg bg-gray-700/30">
                    <div class="flex items-center space-x-3">
                        <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                        <span class="text-gray-200">KeyCloak Server</span>
                    </div>
                    <span class="text-green-400 text-sm font-medium">Активен</span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-gray-700/30">
                    <div class="flex items-center space-x-3">
                        <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                        <span class="text-gray-200">PostgreSQL</span>
                    </div>
                    <span class="text-green-400 text-sm font-medium">Активен</span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-gray-700/30">
                    <div class="flex items-center space-x-3">
                        <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                        <span class="text-gray-200">Hangfire</span>
                    </div>
                    <span class="text-green-400 text-sm font-medium">Активен</span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-gray-700/30">
                    <div class="flex items-center space-x-3">
                        <div class="w-3 h-3 bg-orange-400 rounded-full animate-pulse"></div>
                        <span class="text-gray-200">Redis Cache</span>
                    </div>
                    <span class="text-orange-400 text-sm font-medium">Недоступен</span>
                </div>
            </div>
        </div>

        <!-- Системные ресурсы -->
        <div class="card p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-white">Системные ресурсы</h3>
                <button class="text-blue-400 hover:text-blue-300 text-sm">
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Обновить
                </button>
            </div>
            <div class="space-y-4">
                <!-- CPU -->
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-300">CPU</span>
                        <span class="text-white">45%</span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2">
                        <div class="bg-blue-500 h-2 rounded-full" style="width: 45%"></div>
                    </div>
                </div>
                
                <!-- Memory -->
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-300">Память</span>
                        <span class="text-white">72%</span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2">
                        <div class="bg-green-500 h-2 rounded-full" style="width: 72%"></div>
                    </div>
                </div>
                
                <!-- Disk -->
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-300">Диск</span>
                        <span class="text-white">28%</span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2">
                        <div class="bg-purple-500 h-2 rounded-full" style="width: 28%"></div>
                    </div>
                </div>
                
                <!-- Network -->
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-300">Сеть</span>
                        <span class="text-white">15%</span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2">
                        <div class="bg-orange-500 h-2 rounded-full" style="width: 15%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-semibold text-white">Последняя активность</h3>
            <a href="/audit" class="text-blue-400 hover:text-blue-300 text-sm">
                Показать все
                <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
        <div class="space-y-3">
            <div class="flex items-center space-x-3 p-3 rounded-lg bg-gray-700/30">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <div class="flex-1">
                    <p class="text-sm text-gray-200">Создан новый клиент "test-app"</p>
                    <p class="text-xs text-gray-400">2 минуты назад</p>
                </div>
            </div>
            <div class="flex items-center space-x-3 p-3 rounded-lg bg-gray-700/30">
                <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                <div class="flex-1">
                    <p class="text-sm text-gray-200">Выполнена синхронизация пользователей</p>
                    <p class="text-xs text-gray-400">15 минут назад</p>
                </div>
            </div>
            <div class="flex items-center space-x-3 p-3 rounded-lg bg-gray-700/30">
                <div class="w-2 h-2 bg-orange-400 rounded-full"></div>
                <div class="flex-1">
                    <p class="text-sm text-gray-200">Обновлены настройки безопасности</p>
                    <p class="text-xs text-gray-400">1 час назад</p>
                </div>
            </div>
            <div class="flex items-center space-x-3 p-3 rounded-lg bg-gray-700/30">
                <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                <div class="flex-1">
                    <p class="text-sm text-gray-200">Завершена очистка старых логов</p>
                    <p class="text-xs text-gray-400">3 часа назад</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Если роль не определена, показываем общую информацию -->
    <div class="mb-8 animate-stagger">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-4xl font-bold gradient-text mb-2">
                    Добро пожаловать!
                </h1>
                <p class="text-gray-400 text-lg">Ваша роль не определена. Обратитесь к администратору.</p>
            </div>
        </div>
    </div>
    
    <div class="card p-6">
        <h3 class="text-xl font-semibold text-white mb-4">Информация о пользователе</h3>
        <div class="text-gray-300 space-y-2">
            <p><strong>ID:</strong> @userId</p>
            <p><strong>Имя:</strong> @userName</p>
            <p><strong>Роли:</strong> @string.Join(", ", roles)</p>
            <p><strong>Статус авторизации:</strong> Авторизован</p>
        </div>
    </div>
}