</div>

@using new_assistant.Core.Interfaces

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private IUserRoleService UserRoleService { get; set; } = default!;

    private bool IsActive(string href)
    {
        var currentUri = Navigation.ToBaseRelativePath(Navigation.Uri);
        return string.Equals(currentUri, href.TrimStart('/'), StringComparison.OrdinalIgnoreCase) ||
               (href == "/" && string.IsNullOrEmpty(currentUri));
    }

    private void NavigateTo(string href)
    {
        Navigation.NavigateTo(href);
    }
}